{
  "layer": "bottom",
  "position": "bottom",
  "modules-left": [
    "custom/launcher",
    "group/hardware",
    "tray"
  ],
  "modules-center": [
    "hyprland/workspaces"
  ],
  "modules-right": [
    "group/scripts",
    "group/scroll",
    "custom/weather",
    "clock"
  ],
  "hyprland/workspaces": {
    "format": "{id}",
    "on-click": "activate",
    "persistent_workspaces": {
      "1": [],
      "2": [],
      "3": [],
      "4": [],
      "5": [],
      "6": [],
      "7": [],
      "8": [],
      "9": []
    }
  },
  "group/scroll": {
    "orientation": "horizontal",
    "modules": [
      "pulseaudio#mic",
      "pulseaudio",
      "custom/brightness"
    ]
  },
  "group/scripts": {
    "orientation": "horizontal",
    "modules": [
      "custom/updates"
    ]
  },
  "group/hardware": {
    "orientation": "horizontal",
    "modules": [
      "cpu",
      "memory",
      "network",
      "bluetooth"
    ]
  },
  "pulseaudio#mic": {
    "format": "{format_source}",
    "format-source": "{volume}% ï„°",
    "format-source-muted": "ï„±",
    "on-click": "pactl set-source-mute 0 toggle",
    "on-scroll-down": "pactl set-source-volume 0 -1%",
    "on-scroll-up": "pactl set-source-volume 0 +1%"
  },
  "pulseaudio": {
    "format": "{volume}% {icon} ",
    "format-bluetooth": "{volume}% {icon} ",
    "format-muted": "ó°Ÿ",
    "format-icons": {
      "headphones": "ï€¥",
      "handsfree": "ï€¥",
      "headset": "ï€¥",
      "phone": "ï‚•",
      "portable": "ï‚•",
      "car": "ï†¹",
      "default": [
        "ï€§",
        "ï€¨"
      ]
    },
    "on-click": "pgrep -x myxer && killall -q myxer || myxer",
    "on-click-middle": "pavucontrol",
    "on-scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ +5%",
    "on-scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ -5%",
    "smooth-scrolling-threshold": 1
  },
  "network": {
    "format-wifi": "ï‡«  {bandwidthDownBits}",
    "format-ethernet": "ðŸŒ {bandwidthDownBits}",
    "format-disconnected": "âŒ",
    "format-linked": "ðŸ”—",
    "tooltip-format": "{ipaddr}",
    "tooltip-format-wifi": "{essid} ({signalStrength}%) ï‡«  \n{ipaddr} | {frequency} MHz{icon} \nï‡« {bandwidthDownBits} ï€™ {bandwidthUpBits} ï‚“",
    "tooltip-format-ethernet": "{ifname} ï – \n{ipaddr} | {frequency} MHz{icon} \n ï€™  {bandwidthDownBits} | ï‚“  {bandwidthUpBits} ",
    "tooltip-format-disconnected": "Not Connected to any type of Network",
    "on-click": "pgrep -x rofi &>/dev/null && notify-send rofi || networkmanager_dmenu"
  },
  "custom/brightness": {
    "format": "{}",
    "exec": "~/.config/waybar/bin/waybar_show_bri.sh",
    "on-scroll-up": "~/.config/waybar/bin/brightness.sh 2 up",
    "on-scroll-down": "~/.config/waybar/bin/brightness.sh 2 down",
    "tooltip": false,
    "return-type": "json",
    "interval": 10
  },
  "memory": {
    "format": "ï‘©  {}%",
    "on-click": "alacritty -e btop"
  },
  "disk": {
    "interval": 600,
    "format": "îœ† {percentage_used}%",
    "path": "/",
    "on-click": "alacritty -e btop"
  },
  "cpu": {
    "format": "î‰¦  {usage}%",
    "on-click": "alacritty -e btop"
  },
  "custom/cputemp": {
    "format": "{}",
    "exec": "~/.config/waybar/bin/cputemp.sh",
    "return-type": "json"
  },
  "custom/weather": {
    "format": "{}Â° ",
    "tooltip": true,
    "interval": 3600,
    "exec": "wttrbar",
    "return-type": "json"
  },
  "tray": {
    "icon-size": 18,
    "spacing": 10
  },
  "custom/updates": {
    "format": "{}",
    "interval": 3600,
    "exec": "~/.config/waybar/bin/update_check.sh",
    "exec-if": "[[ $(checkupdates | wc -l) != 0 ]]",
    "return-type": "json",
    "signal": 8,
    "on-click": "alacritty -e yay -Syu && notify-send 'Package updated (arch+aur)' "
  },
  "clock": {
    "interval": 60,
    "format": "ï€—  {:%H:%M}",
    "format-alt": "ï€—  {:%m-%d %R}",
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "month",
      "mode-mon-col": 3,
      "weeks-pos": "right",
      "on-scroll": 1,
      "on-click-right": "mode",
      "format": {
        "today": "<span color='#a6e3a1'><b><u>{}</u></b></span>"
      }
    }
  },
  "bluetooth": {
    "format-on": "ïŠ“",
    "format-off": "ï–±",
    "format-disabled": "",
    "format-connected": "<b>ï–¯ {num_connections}</b>",
    "format-connected-battery": "ï–° {device_alias} {device_battery_percentage}%",
    "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
    "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
    "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_battery_percentage}%",
    "on-click": "rofi-bluetooth -config ~/.config/rofi/menu.d/network.rasi -i"
  }
}
